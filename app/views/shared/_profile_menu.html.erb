<div id="main-menu">
  <div class="menu-btn-actions">
    <section id="profile-info">
      <div class="row">
        <div class="col-md-12">
          <article>
            <%= image_tag avatar_url(current_user), class: "user-photo" %>
          </article>

          <article>
            <p>
              <strong><%= t("activerecord.attributes.user.username") %>:</strong>
              <span><%= current_user.username %></span>
            </p>
            <p>
              <strong>Email:</strong>
              <span><%= current_user.email %></span>
            </p>
            <p>
              <strong><%= current_user.stories.count %> bizuuus!</strong>
            </p>
          </article>
        </div>
    </section>
    <div class="menu-links-actions">
      <%= link_to "Novo Bizuuu!", new_story_path, class: "btn btn-default" %>
      <%= link_to "Editar Perfil", edit_user_registration_path, class: "btn btn-default" %>
      <%= link_to "Sair", destroy_user_session_path, :method => :delete, class: "btn btn-default" %>
    </div>
  </div>
</div>
