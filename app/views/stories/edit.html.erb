<div class="row">
  <div class="col-md-8">
    <%= form_for @story, html: {class: "form-signin"} do |f| %>
      <legend>Editar Artigo</legend>
      
      <%= render partial: "form", locals: {f: f, story: @story} %>

      <button type="submit" class="btn btn-primary">Salvar Artigo</button>
      <%= link_to "Apagar Artigo", @story, class: "btn btn-danger", method: :delete, data: { confirm: "Tem certeza que deseja apagar este artigo?" } %>
    <% end %>
  </div>
</div>