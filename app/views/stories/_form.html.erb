<%= render "shared/error_messages", record: @story %>
<div class="form-group">
  <%= f.label "URL" %>
  <span>- Não esqueça do http</span>
  <%= f.text_field :url, class: "form-control", placeholder: "ex: http://globo.com/noticias/2011/limao.html", disabled: disabled_field(story) %>
</div>
<div class="form-group">
  <%= f.label "Descrição" %>
  <%= f.text_area :description, rows: 7, cols: 15, class: "form-control", placeholder: "ex: As propriedades milagrosas do limão" %>
</div>
