<div class="row">
  <div class="col-md-8">
    <%= form_for @story do |f| %>
      <legend>Nova Notícia</legend>
      
      <%= render partial: "form", locals: {f: f, story: @story} %>

      <div class="form-group">
        <%= f.fields_for :comments do |b| %>
          <%= b.label :text, "Primeiro Comentário (opcional)" %>

          <%= b.text_area :text, class: "form-control", placeholder: "Comente aqui" %>
          <%= b.hidden_field :commentable_type, value: "Story" %>
          <%= b.hidden_field :commentable_id, value: @story.id %>
        <% end %>
      </div>

      <button type="submit" class="btn btn-primary">Compartilhar Notícia!</button>
  <% end %>
</div>